import Search from "../components/search/search.astro"
import Weather from "../components/weather/weather.astro"
import Todoist from "../components/todoist/todoist.astro"

import "../styles/styles.css"
---

<!doctype html>
<html lang="en-CA">
	<head>

		<!-- Important metadata, and the like -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width = device-width, initial-scale = 1" />
        <meta name="robots" content="noindex" />
		<meta name="generator" content={Astro.generator} />
		<title>New Tab</title>
		
		<!-- Favicon -->
		<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

		<!-- JavaScript -->
		<script src="../scripts/app.js" />

	</head>

    <grid>
		<Clock />
		<Search />
		<pomme />
		<pomme-alt />
		<pomme />
		<pomme />
		<pomme />
		<Myrtille url="https://github.com/" icon="" />
		<Weather />
		<pomme-alt />
		<pomme />
		<Raisin 
			title="design" 
			links=`[
				{ "title": " godly.website", "url": "https://godly.website/" },
				{ "title": "󰸌 found.color", "url": "https://foundcolor.co/" },
				{ "title": " colorcontrast.app", "url": "https://colorcontrast.app/" },
				{ "title": "󰅴 developer.mozilla", "url": "https://developer.mozilla.org/" }
				
			]`
		/>
